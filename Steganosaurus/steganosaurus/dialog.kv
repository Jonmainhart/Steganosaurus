#: import Factory kivy.factory.Factory

<WarningDialog@BoxLayout>:
    orientation: "vertical"
    padding: "20dp"
    spacing: "5dp"
    Image:
        source: app.LOGO_PATH
        size_hint: None, None
        width: "220dp"
        height: "50dp"
        allow_stretch: False
    MessageLabel:
        text: "Here we display warning messages. contents: (%s) "%(app.message)
        size_hint: None, None
        width: "220dp"
        height: "60dp"
        text_size: self.width, None
        font_size: self.width/17
        pos_hint: {'center_x': .5, 'center_y': .5}
        color: (1,0,0,1)
    BoxLayout:
        orientation: "horizontal"
        spacing: "20dp"
        size_hint: None, None
        width: "240dp"
        height: "40dp"
        pos_hint: {'top': 1, 'center_x': .5, 'center_y': .5}
        RoundedCornerButton:
            text_size: self.width, None
            font_size: self.width/5
            halign: 'center'
            size_hint: None, None
            width: "110dp"
            height: "40dp"
            text: "Yes"
            on_release: root.parent.parent.parent.dismiss()
        RoundedCornerButton:
            text: "No"
            text_size: self.width, None
            font_size: self.width/5
            halign: 'center'
            size_hint: None, None
            width: "110dp"
            height: "40dp"
            on_release: root.parent.parent.parent.dismiss()

<InfoAndErrorDialog@BoxLayout>:
    orientation: "vertical"
    padding: "20dp"
    spacing: "5dp"
    Image:
        source: app.LOGO_PATH
        size_hint: None, None
        width: "220dp"
        height: "50dp"
        allow_stretch: True
    MessageLabel:
        text: "Here we display info/error messages. contents: (%s) "%(app.message)
        size_hint: None, None
        width: "220dp"
        height: "60dp"
        text_size: self.width, None
        font_size: self.width/17
        color: (1,0,0,1)
    RoundedCornerButton:
        id: info_error_dialog
        text: "OK"
        text_size: self.width, None
        halign: 'center'
        font_size: self.width/5
        size_hint: None, None
        width: "110dp"
        height: "40dp"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        on_release: root.parent.parent.parent.dismiss()